<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientblackbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DynamicWorkoutScreenActivity">

        <TextView
            android:id="@+id/workoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="25dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/workoutPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            app:srcCompat="@drawable/fitlogo" />

        <TextView
            android:id="@+id/workoutDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="0dp"
            android:paddingBottom="25dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/RoutineDynamicbackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Back
" />
    </LinearLayout>
</ScrollView>